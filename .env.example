# Claude Integration Configuration
# Copy this to .env and fill in your values

# Mode: 'api' or 'cli'
CLAUDE_MODE=api

# For API mode (required if CLAUDE_MODE=api)
ANTHROPIC_API_KEY=your-api-key-here

# Claude model to use (optional)
# Options: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
CLAUDE_MODEL=claude-3-sonnet-20240229

# For Supervisor verification
VERIFY_INTERVAL=5000  # milliseconds between verifications
INQUIRY_COOLDOWN=5000  # milliseconds between inquiries

# Enable debug logging
DEBUG=false